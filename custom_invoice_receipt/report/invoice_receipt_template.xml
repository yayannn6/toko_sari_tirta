<odoo>
  <template id="report_receipt_invoice">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="inv">
        <t t-set="company" t-value="inv.company_id"/>
        <div style="width: 210px; font-size: 10px; font-family: 'Courier New', monospace;">

          <!-- HEADER COMPANY INFO -->
          <div style="text-align:center;">
            <t t-if="company.logo">
              <img t-att-src="'data:image/png;base64,%s' % company.logo.decode('utf-8')" width="60" style="margin-bottom:5px;"/>
            </t>
            <h3 style="margin:0;"><t t-esc="company.name"/></h3>
            <p style="margin:0;"><t t-esc="company.street or ''"/></p>
            <p style="margin:0;"><t t-esc="company.phone or ''"/></p>
            <p style="margin:0;"><t t-esc="company.website or ''"/></p>
            <p>---------------------------</p>
          </div>

          <!-- INFO -->
          <p><b>No:</b> <t t-esc="inv.name"/></p>
          <p><b>Tanggal:</b> <t t-esc="inv.invoice_date"/></p>
          <p><b>Pelanggan:</b> <t t-esc="inv.partner_id.name"/></p>
          <p>---------------------------</p>

          <!-- ITEM LIST -->
          <table style="width:100%; border:0; font-size:10px;">
            <t t-foreach="inv.invoice_line_ids" t-as="line">
              <tr>
                <td colspan="2"><t t-esc="line.name"/></td>
              </tr>
              <tr>
                <td><t t-esc="line.quantity"/> x <t t-esc="'Rp {:,.0f}'.format(line.price_unit)"/></td>
                <td style="text-align:right;">
                 <t t-esc="'Rp {:,.0f}'.format(line.price_subtotal)"/>
                </td>
              </tr>
            </t>
          </table>

          <p>---------------------------</p>

          <!-- TOTAL -->
          <p><b>Total:</b> <span style="float:right;"><t t-esc="'Rp {:,.0f}'.format(line.amount_total)"/></span></p>
          <p><b>Status:</b> <t t-esc="inv.payment_state"/></p>

          <p style="text-align:center;">---------------------------</p>

          <!-- FOOTER -->
          <div style="text-align:center;">
            <p>Terima kasih telah berbelanja di <t t-esc="company.name"/>!</p>
            <p>Simpan struk ini sebagai bukti pembayaran.</p>
            <p>---------------------------</p>
            <p style="font-size:8px;">Dicetak pada <t t-esc="inv.create_date.strftime('%d-%m-%Y %H:%M')"/></p>
          </div>

        </div>
      </t>
    </t>
  </template>
</odoo>
